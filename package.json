{
  "name": "bouteek-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "vercel-build": "cd apps/web && npx next build",
    "start": "cd apps/web && npm start",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": "20.x"
  },
  "optionalDependencies": {
    "lightningcss-linux-x64-gnu": "^1.30.2"
  }
}
